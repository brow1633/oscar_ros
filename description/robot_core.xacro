<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

	<xacro:include filename="inertial_macros.xacro"/>

	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>

	<material name="orange">
		<color rgba="1 0.3 0.1 1"/>
	</material>

	<material name="blue">
		<color rgba="0.2 0.2 1 1"/>
	</material>

	<material name="black">
		<color rgba="0 0 0 1"/>
	</material>

	<link name="base_link">
		
	</link>

	<joint name="chassis_joint" type="fixed">
		<parent link="base_link"/>
		<child link="chassis"/>
		<!--This should be just behind rear axle, edge of chassis-->
		<origin xyz="0 0 .11"/> 
	</joint>

	<link name="chassis">
		<visual>
			<!--offset chassis-->
			<origin xyz="0 -.152 0"/>
			<geometry>
				<!--box size="0.3 0.3 0.15"/-->
				<mesh filename="package://oscar_ros/description/BaseASCII-binary.STL"/>
			</geometry>
			<material name="white"/>
		</visual>
		<collision>
			<!--offset chassis-->
			<origin xyz="0 -.152 0"/>
			<geometry>
				<mesh filename="package://oscar_ros/description/BaseASCII-binary.STL"/>
			</geometry>
		</collision>>
		<xacro:inertial_box mass="0.5" x="0.692" y="0.304" z="0.296">
			<origin xyz="0 0 .11" rpy="0 0 0"/>
		</xacro:inertial_box>
	</link>

	<gazebo reference="chassis">
		<material>Gazebo/White</material>
		<mu1 value="0.1"/>
		<mu2 value="0.5"/>
	</gazebo>

	<joint name="rear_left_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="rear_left_wheel"/>
		<!-- physically rotating cylinder & placing it correctly -->
		<origin xyz="-.296 .218 .17" rpy="-${pi/2} 0 0"/>
		<!-- rotation axis -->
		<axis xyz="0 0 1"/>
	</joint>

	<link name="rear_left_wheel">
		<visual>
			<geometry>
				<cylinder length=".1" radius="0.17"/>
			</geometry>
			<material name="blue"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.1" radius="0.17"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.1" radius="0.17">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="rear_left_wheel">
		<material>Gazebo/Blue</material>
		<mu1 value="0.1"/>
		<mu2 value="0.5"/>
	</gazebo>

	<joint name="front_left_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="front_left_wheel"/>
		<!-- physically rotating cylinder & placing it correctly -->
		<origin xyz=".296 .218 .17" rpy="-${pi/2} 0 0"/>
		<!-- rotation axis -->
		<axis xyz="0 0 1"/>
	</joint>

	<link name="front_left_wheel">
		<visual>
			<geometry>
				<cylinder length=".1" radius="0.17"/>
			</geometry>
			<material name="blue"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.1" radius="0.17"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.1" radius="0.17">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="front_left_wheel">
		<material>Gazebo/Blue</material>
		<mu1 value="0.1"/>
		<mu2 value="0.5"/>
	</gazebo>

	<joint name="rear_right_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="rear_right_wheel"/>
		<!-- physically rotating cylinder & placing it correctly -->
		<origin xyz="-.296 -.218 .17" rpy="-${pi/2} 0 0"/>
		<!-- rotation axis -->
		<axis xyz="0 0 1"/>
	</joint>

	<link name="rear_right_wheel">
		<visual>
			<geometry>
				<cylinder length=".1" radius="0.17"/>
			</geometry>
			<material name="blue"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.1" radius="0.17"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.1" radius="0.17">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="rear_right_wheel">
		<material>Gazebo/Blue</material>
		<mu1 value="0.1"/>
		<mu2 value="0.5"/>
	</gazebo>

	<joint name="front_right_wheel_joint" type="continuous">
		<parent link="base_link"/>
		<child link="front_right_wheel"/>
		<!-- physically rotating cylinder & placing it correctly -->
		<origin xyz=".296 -.218 .17" rpy="-${pi/2} 0 0"/>
		<!-- rotation axis -->
		<axis xyz="0 0 1"/>
	</joint>

	<link name="front_right_wheel">
		<visual>
			<geometry>
				<cylinder length=".1" radius="0.17"/>
			</geometry>
			<material name="blue"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.1" radius="0.17"/>
			</geometry>
		</collision>
		<xacro:inertial_cylinder mass="0.1" length="0.1" radius="0.17">
			<origin xyz="0 0 0" rpy="0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="front_right_wheel">
		<material>Gazebo/Blue</material>
		<mu1 value="0.1"/>
		<mu2 value="0.5"/>
	</gazebo>
</robot>
